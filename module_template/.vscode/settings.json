{
    "files.exclude": {
        "**/.*.*.cmd": true,
        "**/.*.d": true,
        "**/.*.S": true
    },
    "[c]": {
        "editor.detectIndentation": false,
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.rulers": [80,100]
    },
    "files.associations": {
        "*.h": "c",
        "ratio": "c",
        "array": "c",
        "string_view": "c",
        "initializer_list": "c",
        "random": "cpp"
    },
    "editor.indentSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
}
